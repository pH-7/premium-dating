<div class="progress">
    <div
        class="progress-bar progress-bar-striped active"
        role="progressbar"
        aria-valuenow="{progressbar_percentage}"
        aria-valuemin="0"
        aria-valuemax="100"
        style="width:{progressbar_percentage}%"
    >{progressbar_percentage}% - {lang 'STEP'} {progressbar_step}/{progressbar_total_steps}
    </div>
</div>
